<div class="rr-sidebar">
  <ul class="rr-list">
    {{#each this.model as |band|}}
      <li class="rr-list-item">
        <LinkTo @route="bands.band.songs" @model={{band.slug}} class="rr-band-link">
          {{band.name}}
        </LinkTo>
      </li>
    {{/each}}
  </ul>
  <div class="rr-new-label">
    {{#if this.isAddingBand}}
    <form class="rr-inline-form" {{on "submit" this.saveBand}}>
      <Input
        @type="text"
        @value={{this.newBandName}}
        class="rr-input"
        placeholder="New band"
      />
      <button
        type="submit"
        class="rr-action-button"
        disabled={{this.isAddButtonDisabled}}
      >
        Add
      </button>
      <button
        type="button"
        class="rr-cancel-icon"
        {{on "click" this.cancelAddBand}}>
        âœ•
      </button>
    </form>
    {{else}}
      <button
        type="button"
        class="avenir bn bg-transparent near-white"
        data-test-rr="new-band-label"
        {{on "click" this.addBand}}
      >
        + Add new band
      </button>
    {{/if}}
  </div>
</div>
<div class="rr-main-panel">
  {{outlet}}
</div>